<CreateAccountWindow>:
    name: "create"


    username: username
    email: email
    password: passw


    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size


        Label:
            text: "Create an Account"
            color: 0, 0, 0, 1
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.8}
            size_hint: 0.8, 0.1


        Label:
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.05, "top":0.65}
            text: "Username: "
            color: 0, 0, 0, 1
            font_size: (root.width**2 + root.height**2) / 15**4


        TextInput:
            id: username
            font_size: (root.width**2 + root.height**2) / 15**4
            cursor_color: 0, 0, 0, 1
            multiline: False
            pos_hint: {"x": 0.3 , "top":0.6}
            size_hint: 0.4, 0.05


        Label:
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.05, "top":0.59}
            text: "Email: "
            color: 0, 0, 0, 1
            font_size: (root.width**2 + root.height**2) / 15**4


        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 15**4
            cursor_color: 0, 0, 0, 1
            multiline: False
            pos_hint: {"x": 0.3, "top":0.54}
            size_hint: 0.4, 0.05


        Label:
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.05, "top":0.53}
            text: "Password: "
            color: 0, 0, 0, 1
            font_size: (root.width**2 + root.height**2) / 15**4


        TextInput:
            id: passw
            font_size: (root.width**2 + root.height**2) / 15**4
            cursor_color: 0, 0, 0, 1
            multiline: False
            password: True
            pos_hint: {"x": 0.3, "top":0.48}
            size_hint: 0.4, 0.05


        Button:
            pos_hint:{"x":0.3,"y":0.1}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Submit"
            color: 0, 0, 0, 1  
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


        Button:
            pos_hint:{"x":0.3,"y":0.21}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Already have an Account? Log In"
            color: 0, 0, 0, 1  
            on_release:
                root.manager.transition.direction = "right"
                root.login()




