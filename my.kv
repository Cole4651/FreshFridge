<MainWindow>:
    name: "main"
   
    FloatLayout:


        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size


        Label:
            id: n


        Label:
            text: "Home Page"
            font_size: (root.width**2 + root.height**2) / 13**4
            color: 0, 0, 0, 1
            pos_hint: {"top": 0.8}  
            size_hint: 1, 0.1  


        Button:
            text: "Settings"
            size_hint: 0.2, 0.1
            pos_hint: {"right": 1, "top": 1}
            on_release:
                root.settings()


        Button:
            text: "Fridge"
            size_hint: 0.3, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Position in the middle
            on_release:
                root.to_fridge()


<SettingsWindow>:
    name: "settings"


    n: n
    email: email
    created_label: created


    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  
            Rectangle:
                pos: self.pos
                size: self.size


        Label:
            id: n  
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "
            color: 0, 0, 0, 1  


        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "
            color: 0, 0, 0, 1  


        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "
            color: 0, 0, 0, 1  


        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            color: 0, 0, 0, 1  
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"


        Button:
            pos_hint:{"x":0.05, "y": 0.8}
            size_hint: 0.2,0.1
            text: "Back"
            color: 0, 0, 0, 1  
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"




<FridgeWindow>:
    name: "fridge"


    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background color
            Rectangle:
                pos: self.pos
                size: self.size


        Label:
            id: n
            text: "Fridge"
            color: 0, 0, 0, 1
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.8}
            size_hint: 0.8, 0.1


        Label:
            id: items_label
            text: ""
            size_hint: 0.2,0.1
            color: 0, 0, 0, 1  
            pos_hint: {"center_x":0.5, "y": 0.5}


        Button:
            text: "Add Item"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.1, "y": 0.1}
            on_release: root.add_item()


        TextInput:
            id: item_input
            hint_text: "Enter item here"
            font_size: (root.width**2 + root.height**2) / 15**4
            cursor_color: 0, 0, 0, 1
            multiline: False
            size_hint: 0.4, 0.05
            pos_hint: {"center_x": 0.5, "y": 0.3 if root.input_visible else 2.0 }
       
        Button:
            text: "Remove Item"
            size_hint: 0.3, 0.1
            pos_hint: {"x": 0.6, "y": 0.1}
            on_release: root.open_dropdown(self)


        Button:
            text: "Back"
            size_hint: 0.2,0.1
            pos_hint: {"x":0.05, "y": 0.85}
            on_release:
                root.manager.transition.direction = 'down'
                root.manager.current = "main"
